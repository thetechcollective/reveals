{
    "version": "0.2",
    "language": "en",
    "ignorePaths": [
        "**/node_modules/**",
        "**/.git/**",
        "**/.github/**",
        "**/.vscode/**",
        "**/.cspell/**",
        "**/logs/**",
        "**/tmp/**",
        "**/temp/**"
    ],
    "files": [
        "**/*.md",
        "**/*.txt",
        "_data/**/*.json",
        "**/*.yml",
        "**/*.yaml",
        "**/LICENSE"
    ],
    "ignoreRegExpList": [
        "/```[\\s\\S]*?```/g",          // block code
        "/`.*?`/g",                     // inline code
        "/<!--.*?-->/g",                // HTML comments
        "/\\[.*?\\]\\(.*?\\)/g",        // Markdown links
        "/class=[\"'].*?[\"']/",        // class attributes
        "/\\\\\\[[\\s\\S]*?\\\\\\]/g"   //LaTex block
    ],
    "words": [
        "lakruzz",
        "albertbanke",
        "ravvnen",
        "thetechcollective",
        "workon",
        "wrapup",
        "responsibles",
        "codeowners",
        "squezeed",
        "devcontainer",
        "devcontainers",
        "sdlc",
        "frontmatter"
    ],
    "ignoreWords": [
        "cspell",
        "ffmerge",
        "cspellrc",
        "pytest",
        "coveragerc",
        "pyproject",
        "revealjs",
        "hattab",
        "gulpfile",
        "Molesky"
    ]
}
